# configurazione interfaccia di rete
# del router DERIVA di Dritta (edificio D)

# interfaccia verso CONTROFIOCCO (edificio C)
ifconfig eth0 192.168.72.2 netmask 255.255.255.0 broadcast 192.168.72.255

# interfaccia verso APPRODO (edificio A)
ifconfig eth1 192.168.74.2 netmask 255.255.255.0 broadcast 192.168.74.255

# interfaccia <ponte radio> verso ECOSCANDAGLIO (edificio E)
ifconfig eth3 192.168.76.1 netmask 255.255.255.0 broadcast 192.168.76.255 


# interfaccia verso la sottorete interna
ifconfig eth4 192.168.11.1 netmask 255.255.255.0 broadcast 192.168.11.255 


# rete wi-fi
ifconfig wlan0 192.168.12.1 netmask 255.255.255.0 broadcast 192.168.12.255 


# sottorete lan (192.168.11.x) con 20 host

ifconfig eth0 192.168.11.2 netmask 255.255.255.0 broadcast 192.168.11.255 #Host_1
